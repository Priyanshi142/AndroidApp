	<link rel="stylesheet" href="style.css">
	<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.3.1.min.js"></script>
	<script>

    $(document).ready(function() {
    		
    		$('.result').click(function(){
    			let c2=$('.q3').val();
    			let c3=$('.q4').val();
    		
    			let c=$('li');
    			let c1=0;
    			for(let i=0;i<c.length;i++){
    				if($('.q5').val()==c[i]){
    					c1=1;
    					$('.result').after(c1);
    				};
    			};
    		if((c2=='COUGH' || c2=='FEVER' || c2=='DIFFICULTY IN BREATHING' || c2=='MUSCLE ACHE' || c2=='LACK OF TASTE OR SMELL')&& c3=='YES' && (c1==1 || c1==0))
    		{
    			$('.result').text('You must go to hospital asap and keep yourself quarentined.Stay Quarentine Stay safe :)');
    		};

    		if(c2=='NONE' && c3=='YES' && c1==0 || c1==1){
    			$('.result').text('Please stay self quarentined');
    		}
    		if((c2=='COUGH' || c2=='FEVER' || c2=='DIFFICULTY IN BREATHING' || c2=='MUSCLE ACHE' || c2=='LACK OF TASTE OR SMELL') && c3=='NO' && (c1==1 || c1==0))
    		{
    			$('.result').text('Please visit the doctor');
    		}
    		if(c2=='NONE' && c3=='NO' && c1==0 || c1==1){
    			$('.result').text('You are absolutely safe. Stay at home and Stay Safe');
    		}
    });
   });
	</script>
